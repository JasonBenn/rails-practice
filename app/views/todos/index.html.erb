<%= link_to "New", new_todo_path %>
<ul>
  <% @todos.each do |todo| %>
    <li>
      <strong><%= todo.title %>:</strong> 
      <%= todo.description %> 
      <%= link_to "Show", todo %>
      <%= link_to "Edit", edit_todo_path(todo) %>
      <%= link_to "Delete", todo_path(todo), { 
        method: :delete, 
        data: { confirm: "Delete?" }
      } %>
    </li>
  <% end %>
</ul>
